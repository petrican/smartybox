{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@smartybox/cookies": ["cookies/src/index.ts"],
      "@smartybox/lib/cookies": ["lib/cookies/src/index.ts"],
      "@smartybox/libs/cookies": ["libs/cookies/src/index.ts"],
      "@smartybox/smartybox-plugin": ["libs/smartybox-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
